{
	"extends": "../tsconfig.base.json",
	"include": [".", "../src/**/*"],
	"compilerOptions": {
		"noEmit": true,
		"baseUrl": "../src",
		"paths": {
			"#core": ["core/index"],
			"#core/*": ["core/*"],
			"#database/*": ["lib/database/*"],
			"#structures/*": ["lib/structures/*"],
			"#utils/*": ["lib/utils/*"],
			"#lib/*": ["lib/*"],
			"#root/*": ["*"]
		}
	},
	"references": [{ "path": "../src" }]
}
